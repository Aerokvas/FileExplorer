<Window x:Class="FileMenager.CreateFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create File" Height="100" Width="300" Background="#FF202020" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Название:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Foreground="White"/>
        <TextBox Name="fileNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="75,15,0,0" Width="150"/>
        <Button Content="OK" IsDefault="True" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,40,10,0" Width="75" Click="OK_Click"/>
        <Button Content="Отмена" IsCancel="True" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,40,90,0" Width="75" Click="Cancel_Click"/>
    </Grid>
</Window>
