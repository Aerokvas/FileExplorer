<Window x:Class="FileMenager.RenameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            Title="Rename" Height="100" Width="300" Background="#FF202020" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Новое имя:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Foreground="White"/>
        <TextBox Name="newNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="85,15,0,0" Width="150"/>
        <Button Content="OK" IsDefault="True" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,40,10,0" Width="75" Click="OK_Click"/>
        <Button Content="Отмена" IsCancel="True" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,40,90,0" Width="75" Click="Cancel_Click"/>
    </Grid>
</Window>
